{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2020",                          
    "module": "commonjs",                       
    "outDir": "./dist",                         
    "rootDir": "./src",                         
    "strict": true,                             
    "esModuleInterop": true,                    
    "noUnusedLocals": true,                    
    "noUnusedParameters": true,                
    "moduleResolution": "node",                 
    "sourceMap": true,                          
    "experimentalDecorators": true,             
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true    
  },
  "include": [
    "src/**/*.ts"                               
  ],
  "exclude": [
    "node_modules",                             
    "dist"                                      
  ]
}
